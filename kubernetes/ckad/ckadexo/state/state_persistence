kops create cluster  --cloud=aws --zones=eu-central-1a   --name imesh.k8s.local --node-size=t2.medium  --node-count=1 --master-size=t2.small  --ssh-public-key=~/.ssh/guemils_frank.pub --yes



apiVersion: v1
kind: Pod
metadata:sudo timedatectl set-ntp off
  name:pod
volumes:
- name: v1
  emptydir: {}
spec:
  containers:
  - image: busybox
    name: pod1
    args:
    - /bin/sh
    - -c
    - sleep 2000
    volumeMounts:
    - name: v1
      mountPath: /etc/foo

  - image: busybox
    name: pod2
    args:
    - /bin/sh
    - -c
    - sleep 20000
    volumeMounts:
    - name: v1
      mountPath: /etc/foo